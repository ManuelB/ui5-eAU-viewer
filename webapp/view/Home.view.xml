<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="myhealthapp.controller.Home"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="{i18n>title}">
		<content>
			<HBox alignItems="block">
				<GenericTile id="myPatientsTile" binding="{/Patient}" class="sapUiTinyMarginBegin sapUiTinyMarginTop" header=" Ansicht eAU" press="onMyPatientsTilePress">
					<TileContent unit="Patients">
						<NumericContent value="{%total%}" icon="sap-icon://account"/>
					</TileContent>
				</GenericTile>
				<Image src="" width="{300}" />
			</HBox>
			<VBox id="bx2">
				<Text text="" class="sapUiSmallMarginBottom" />
				<Text text="" class="sapUiSmallMarginBottom" />
				<Image src="" width="{300}" />
			</VBox>
			<Button text="Upload" type="Accept" press="onUploadFile"/>
		</content>
		<footer>
			<OverflowToolbar id="overflowToolbar">
            	<Label text="{i18n>homeFooterText}"/>				
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>