<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="myhealthapp.controller.Home"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="{i18n>title}">
		<content>
			<GenericTile id="myPatientsTile" binding="{/Patient}" class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="Search for Patients" press="onMyPatientsTilePress">
				<TileContent unit="Patients">
					<NumericContent value="{%total%}" icon="sap-icon://stethoscope"/>
				</TileContent>
			</GenericTile>
			<GenericTile id="myOrganizationsTile" binding="{/Organization}" class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="Health Organizations" press="onMyOrganzationsTilePress">
				<TileContent unit="Organizations">
					<NumericContent value="{%total%}" icon="sap-icon://org-chart"/>
				</TileContent>
			</GenericTile>
			<GenericTile id="myEncountersTile" binding="{/Encounter}" class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="Patient Encounters" press="onMyEncountersTilePress">
				<TileContent unit="Encounters">
					<NumericContent value="{%total%}" icon="sap-icon://org-chart"/>
				</TileContent>
			</GenericTile>
			<GenericTile id="myObservationsTile" binding="{/Observation}" class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="Patient Observations" press="onMyObservationsTilePress">
				<TileContent unit="Observations">
					<NumericContent value="{%total%}" icon="sap-icon://org-chart"/>
				</TileContent>
			</GenericTile>
			<VBox>
				<Text text="" class="sapUiSmallMarginBottom" />
				<Text text="" class="sapUiSmallMarginBottom" />
				<Image src="../img/lgs_transpa.png" width="{300}" />
			</VBox>
		</content>
		<footer>
			<OverflowToolbar id="overflowToolbar">
			 	<Button id="btn_messagePopover"
                        icon="sap-icon://alert"
                        text="{=${messageModel>/}.length}"
                        press="onMessagePopoverPress" />
            	<Label text="{i18n>homeFooterText}"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>