<mvc:View xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
		xmlns:l="sap.ui.layout"
		xmlns:u="sap.ui.unified"
	controllerName="myhealthapp.controller.Home"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="{i18n>title}">
		<content>
			<VBox class="mainButtons" id="mb1">
				<Text text=" " />
				<Text text="  Bitte clicken Sie nun auf eine der vier verschiedenen Fassungen:" />
			</VBox>
			<HBox alignItems="block" class="mainButtons" id="mb2">
				<GenericTile id="myPatientsTile" binding="{/Patient}" class="sapUiTinyMarginBegin sapUiTinyMarginTop" header=" Ansicht Versicherter      " press="eauPress">
				</GenericTile>
				<GenericTile id="AGTile"  class="sapUiTinyMarginBegin sapUiTinyMarginTop" header=" Ansicht Arbeitgeber         " press="onAGPress">
				</GenericTile>
				<GenericTile id="KrKaTile"  class="sapUiTinyMarginBegin sapUiTinyMarginTop" header=" Ansicht Krankenkasse" press="onKrKaPress">
				</GenericTile>
				<GenericTile id="StornoTile"  class="sapUiTinyMarginBegin sapUiTinyMarginTop" header=" Ansicht Stornierung      " press="onStornoPress">
				</GenericTile>
			</HBox>
			<VBox class="mainButtons mb3" id="mb3">
				<Text text=" " />
				<Text text=" " />
					<Button class="otherf"
					text="andere Datei auswählen"
					press="otherFile"/>
			</VBox>
			<VBox id="fileUlBox" class="ulVBox">
				<Text text="" class="sapUiSmallMarginBottom" />
				<Text text="" class="sapUiSmallMarginBottom" />
				<Image src="" width="{300}" />
				<Text text="Bitte wählen sie zunaechst eine eAU Datei aus, die sie betrachten möchten" />
				<Text text="Die Dateiendung muss .p7b oder .p7s sein." />
				<Text text=" " />
				<u:FileUploader
					id="fileUploader"
					name="myFileUpload"
					uploadUrl="./upload"
					tooltip="Datei einlesen"
					buttonText="durchsuchen..."
					fileType="p7s,p7b"
					uploadComplete="handleUploadComplete"/>
				<Button
					text="eAU Datei einlesen"
					press="onUploadCSVFile"/>
				<Image src="" width="{300}" />
			</VBox>
		</content>
		<footer>
			<OverflowToolbar id="overflowToolbar">
            	<Label text="{i18n>homeFooterText}"/>				
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>