<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" 
    controllerName="myhealthapp.controller.Patients"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="{i18n>title}" showNavButton="true" navButtonPress="onNavBack">
			<Toolbar>
				<Title text="Search for a text in the patient's data here (loading time 30 sec.): "/>
				<ToolbarSpacer />
				<SearchField id="searchField" search=".onSearchPatients" width="50%"/>
			</Toolbar>
			<Text text="  You may search for patient names like 'Amy' or 'Sanchez' in the search box above" class="sapUiSmallMarginBottom" />
		<content>
			<List id="patientsList" 
			headerText="{i18n>patientsTitle}" 
			items="{/Patient}" 
			itemPress="onPressPatient"
			growing="true"
    		growingThreshold="6"
    		growingScrollToLoad="false"
			growingTriggerText=" "
			>
                <StandardListItem 
				title="ID: {id}" 
				description="Name: {name/[use=official]/given} {name/[use=official]/family}"
				type="Navigation"/>
            </List>
		</content>
			<Text text="  When clicking on a patient record you can see more details, edit and save the data" />
		<footer>
			<Toolbar>
				<Label text="{i18n>homeFooterText}"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>